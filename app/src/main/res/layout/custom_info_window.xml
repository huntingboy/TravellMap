<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_marker_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_marker_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_around_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/marker_around_scene"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/bt_around_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/marker_around_restaurant"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>