<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_friend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tab1_friend"
            android:drawableTop="@drawable/ic_add_friend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/btn_text_selector"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/title_tab1_friend"/>
        <TextView
            android:id="@+id/tv_tab2_friend"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_view"
            android:layout_height="match_parent"
            android:textColor="@color/btn_text_selector"
            android:layout_weight="1"
            android:text="@string/title_tab2_friend"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
