<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nomad.view.RoundImageView
            android:id="@+id/image_comment_header"
            android:layout_width="0dp"
            android:src="@drawable/ic_user_head"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_comment_username"
                android:textColor="#9aea21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_comment_time"
                android:textColor="#c0c7b6"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_description"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_comment_approve"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:enabled="true"
            android:drawableStart="@drawable/ic_approve1"
            android:textColor="@color/approve_selector"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment_disapprove"
            android:enabled="true"
            android:focusable="false"
            android:drawableStart="@drawable/ic_disapprove1"
            android:textColor="@color/disapprove_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>