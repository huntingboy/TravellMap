<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nomad.view.RoundImageView
            android:id="@+id/image_profile_header"
            android:src="@drawable/ic_nav_head"
            android:layout_width="70dp"
            android:layout_height="65dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_profile_time"
                android:textColor="#3c37bc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_profile_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_profile_location"
            android:src="@drawable/checkin"
            android:layout_width="71dp"
            android:layout_height="51dp" />
        <TextView
            android:id="@+id/tv_profile_address"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_profile_approve"
            android:drawableStart="@drawable/ic_approve1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_profile_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_comment"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_profile_share"
            android:drawableStart="@drawable/ic_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>